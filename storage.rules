rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /recipes/{recipeId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
                   && (recipeId == 'new' || request.auth.uid != null);
      allow delete: if request.auth != null;
    }
  }
} 