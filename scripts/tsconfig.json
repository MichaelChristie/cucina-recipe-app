{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "../dist",
    "resolveJsonModule": true
  },
  "include": [
    "./**/*",
    "../src/config/*"
  ]
} 